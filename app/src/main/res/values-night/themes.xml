<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.45MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="OutlinedRoundedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/outline_box_stroke</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.TextInputLayout.Rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="DialogBg" parent="">
        <item name="android:background">#282C34</item>
        <item name="android:elevation">15dp</item>
    </style>

    <style name="IconsTint" parent="">
        <item name="android:tint">@color/white</item>
    </style>

        <style name="LoadingBg" parent="">
        <item name="android:background">@color/black</item>
    </style>

    <style name="TextColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>